# LLM2LLM-Bridge Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# LLM PROVIDER API KEYS
# ========================================

# OpenRouter (Recommended - provides access to multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Direct Provider APIs (Optional)
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Site Information for OpenRouter
YOUR_SITE_URL=http://localhost:8000
YOUR_SITE_NAME=LLM2LLM-Bridge

# ========================================
# OBSERVABILITY (Optional)
# ========================================

# LangFuse Tracing
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com

# ========================================
# CACHING CONFIGURATION
# ========================================

# Redis URL (default: redis://localhost:6379/0)
REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds (default: 86400 = 24 hours)
CACHE_TTL_SECONDS=86400

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Environment (development/production)
ENVIRONMENT=production

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ========================================
# SECURITY
# ========================================

# API Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:8501